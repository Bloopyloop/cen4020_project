<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/contacts_view"
    tools:cardCornerRadius="4dp"
    android:layout_margin="5dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/displayName_contact_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/display_name_"
            android:background="@color/cardview_light_background"
            android:gravity="center_vertical"
            android:textColor="@color/darkText"
            android:textSize="@dimen/text_size"/>

        <TextView
            android:id="@+id/cell_contact_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/displayName_contact_textView"
            android:background="@color/cardview_light_background"
            android:text="@string/cell_phone"
            android:gravity="center_vertical"
            android:textColor="@color/darkText"
            android:textSize="@dimen/text_size"/>

        <TextView
            android:id="@+id/workNumber_contact_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cell_contact_textView"
            android:background="@color/cardview_light_background"
            android:text="@string/work_phone"
            android:gravity="center_vertical"
            android:textColor="@color/darkText"
            android:textSize="@dimen/text_size"/>

        <TextView
            android:id="@+id/homeNumber_contact_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/workNumber_contact_textView"
            android:background="@color/cardview_light_background"
            android:text="@string/home_phone"
            android:gravity="center_vertical"
            android:textColor="@color/darkText"
            android:textSize="@dimen/text_size"/>

        <TextView
            android:id="@+id/personalEmail_contact_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/homeNumber_contact_textView"
            android:background="@color/cardview_light_background"
            android:text="@string/personal_email"
            android:gravity="center_vertical"
            android:textColor="@color/darkText"
            android:textSize="@dimen/text_size"/>

        <TextView
            android:id="@+id/workEmail_contact_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/personalEmail_contact_textView"
            android:background="@color/cardview_light_background"
            android:text="@string/work_email"
            android:gravity="center_vertical"
            android:textColor="@color/darkText"
            android:textSize="@dimen/text_size"/>

        <TextView
            android:id="@+id/website_contact_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/workEmail_contact_textView"
            android:background="@color/cardview_light_background"
            android:text="@string/website"
            android:gravity="center_vertical"
            android:textColor="@color/darkText"
            android:textSize="@dimen/text_size"/>

        <TextView
            android:id="@+id/linkedin_contact_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/website_contact_textView"
            android:background="@color/cardview_light_background"
            android:text="@string/linkedin"
            android:gravity="center_vertical"
            android:textColor="@color/darkText"
            android:textSize="@dimen/text_size"/>

        <TextView
            android:id="@+id/facebook_contact_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linkedin_contact_textView"
            android:background="@color/cardview_light_background"
            android:text="@string/facebook"
            android:gravity="center_vertical"
            android:textColor="@color/darkText"
            android:textSize="@dimen/text_size"/>

        <TextView
            android:id="@+id/twitter_contact_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/facebook_contact_textView"
            android:background="@color/cardview_light_background"
            android:text="@string/twitter"
            android:gravity="center_vertical"
            android:textColor="@color/darkText"
            android:textSize="@dimen/text_size"/>
        <Button
            android:id="@+id/delete_contact_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:layout_below="@id/twitter_contact_textView"
            />

    </RelativeLayout>


</android.support.v7.widget.CardView >